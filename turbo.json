{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@iiskills/content-sdk#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@iiskills/schema#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}