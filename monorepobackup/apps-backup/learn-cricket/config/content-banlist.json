  "contentGuidelines": {
    "allowed": [
      "Cricket match discussions",
      "Player statistics and performance",
      "Team strategies and tactics",
      "Historical cricket moments",
      "Cricket equipment and gear",
      "Venue and stadium information",
      "Tournament schedules and fixtures",
      "Score updates and match results",
      "Cricket rules and regulations",
      "Training and coaching tips",
      "Cricket news and updates",
      "Fan celebrations and support",
      "Cricket trivia and quizzes",
      "Player interviews and quotes",
      "Cricket analysis and commentary"
    ],
    "notAllowed": [
      "Political discussions",
      "Religious debates",
      "Racial or ethnic slurs",
      "Personal attacks on players",
      "Threats or violence",
      "Illegal activities",
      "Adult content",
      "Spam or scams",
      "Misinformation",
      "Harassment or bullying"
    ]
  },
  "moderationRules": {
    "autoBlock": {
      "enabled": true,
      "threshold": 1,
      "description": "Automatically block content containing banned keywords or phrases"
    },
    "flagForReview": {
      "enabled": true,
      "threshold": 2,
      "description": "Flag content for manual review if it contains controversial topics"
    },
    "warningSystem": {
      "enabled": true,
      "maxWarnings": 3,
      "description": "Issue warnings to users before blocking"
    }
  },
  "exceptions": {
    "contextualAllowed": [
      "Discussions about match fixing in historical context",
      "Educational content about betting regulations",
      "Analysis of controversial umpiring decisions",
      "Player disciplinary actions and suspensions",
      "Code of conduct violations in cricket"
    ]
  }
