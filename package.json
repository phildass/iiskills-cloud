{
  "name": "iiskills-cloud-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@4.12.0+sha512.f45ab632439a67f8bc759bf32ead036a1f413287b9042726b7cc4818b7b49e14e9423ba49b18f9e06ea4941c1ad062385b1d8760a8d5091a1a31e5f6219afca8",
  "workspaces": [
    "apps/*",
    "packages/*",
    "learn-*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "yarn npm audit --all --recursive",
    "security:check": "yarn run lint:check && yarn run security:audit",
    "dev:main": "cd apps/main && npm run dev",
    "generate-pm2-config": "node generate-ecosystem.js",
    "validate-pm2-config": "node validate-ecosystem.js",
    "test-pm2-config": "node test-ecosystem.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "next": "^16.1.1",
    "qrcode": "^1.5.4",
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "postcss": "latest",
    "prettier": "^3.7.4",
    "tailwindcss": "latest",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3"
  }
}
